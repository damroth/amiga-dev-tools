post_install() {
    echo ""
    echo "==> Amiga Development Tools installed successfully!"
    echo ""
    echo "To use the tools, reload your environment:"
    echo "  exec bash       (or exec zsh)"
    echo ""
    echo "Or open a new terminal window."
    echo ""
    echo "Installed tools:"
    echo "  - vasmm68k_mot  (Motorola 68k assembler)"
    echo "  - vc            (VBCC compiler frontend)"
    echo "  - vbccm68k      (VBCC compiler backend)"
    echo "  - vlink         (Linker)"
    echo ""
    echo "Environment variables:"
    echo "  AMIGA_DEV=/opt/amiga-dev"
    echo "  VBCC=/opt/amiga-dev"
    echo "  NDK=/opt/amiga-dev/ndk"
    echo ""
}

post_upgrade() {
    post_install
}

post_remove() {
    echo ""
    echo "==> Amiga Development Tools removed"
    echo "You may want to restart your shell to clear environment variables."
    echo ""
}